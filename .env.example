# ===========================================
# SLACK CONFIGURATION
# ===========================================

# Slack Bot Token (starts with xoxb-)
TOKEN_SLACK=xoxb-your-slack-bot-token-here

# Slack Channel/Group ID where bot will send messages
GROUP_ID_SLACK=C1234567890

# Slack App Token (for Socket Mode, starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token-here

# Slack Signing Secret (for webhook verification)
SLACK_SIGNING_SECRET=your-signing-secret-here

# ===========================================
# FLASK CONFIGURATION
# ===========================================

# Flask Environment (development, staging, production)
FLASK_ENV=production

# Flask Debug Mode (true/false)
FLASK_DEBUG=false

# Flask Application Entry Point
FLASK_APP=run.py

# Secret Key for Flask Sessions (generate a random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Server Host and Port
HOST=0.0.0.0
PORT=5000

# ===========================================
# REPORT CONFIGURATION
# ===========================================

# Default Report Server URL
DEFAULT_URL_REPORT=http://your-report-server.com

# Report Paths for Different Projects
REPORT_PATH_MLM=/path/to/mlm/reports
REPORT_PATH_ADMIN=/path/to/admin/reports
REPORT_PATH_DOB=/path/to/dob/reports
REPORT_PATH_VKYC=/path/to/vkyc/reports
REPORT_PATH_EDPADMIN=/path/to/edpadmin/reports
REPORT_PATH_EDPDOB=/path/to/edpdob/reports

# ===========================================
# BATCH FILE CONFIGURATION
# ===========================================

# Batch File Paths for Different Projects
BATCH_MLM=/path/to/mlm.bat
BATCH_ADMIN=/path/to/admin.bat
BATCH_DOB=/path/to/dob.bat
BATCH_VKYC=/path/to/vkyc.bat
BATCH_EDPADMIN=/path/to/edpadmin.bat
BATCH_EDPDOB=/path/to/edpdob.bat

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=logs/app.log

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log Rotation (max file size in MB)
LOG_MAX_SIZE=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Docker Registry Configuration (for CI/CD)
CI_REGISTRY_IMAGE=registry.gitlab.com/your-group/bot-slack
IMAGE_TAG=latest

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=bot-slack

# ===========================================
# DATABASE CONFIGURATION (Optional)
# ===========================================

# Redis Configuration (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Database URL (if using a database)
DATABASE_URL=sqlite:///data/bot_slack.db

# ===========================================
# MONITORING & HEALTH CHECK
# ===========================================

# Health Check Endpoint
HEALTH_CHECK_ENDPOINT=/health

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_ENDPOINT=/metrics

# Alert Configuration
ALERT_EMAIL=admin@yourcompany.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CORS Configuration
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Deployment Environment
DEPLOYMENT_ENV=production

# Server Configuration
DEPLOY_HOST=your-server.com
DEPLOY_USER=deploy
DEPLOY_PATH=/opt/bot-slack

# SSH Configuration (for deployment)
SSH_PRIVATE_KEY_PATH=/path/to/private/key
SSH_KNOWN_HOSTS_PATH=/path/to/known_hosts

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup Directory
BACKUP_DIR=/opt/backups/bot-slack

# Maximum number of backups to keep
MAX_BACKUPS=5

# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================

# Slack Webhook for Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Development Mode Settings
DEV_MODE=false
DEV_RELOAD=true
DEV_DEBUG_TOOLBAR=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test.db
TEST_SLACK_TOKEN=xoxb-test-token

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Worker Configuration
WORKERS=4
WORKER_TIMEOUT=30
WORKER_CONNECTIONS=1000

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Request Timeout
REQUEST_TIMEOUT=30

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/Disable Features
FEATURE_HEALTH_CHECK=true
FEATURE_METRICS=true
FEATURE_RATE_LIMITING=true
FEATURE_CORS=true
FEATURE_LOGGING=true

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================

# Add your custom environment variables here
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2